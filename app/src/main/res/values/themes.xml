<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QRcodeScanner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme" parent="@style/AppThemeActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppThemeActionBar" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="actionBarStyle">@style/ActionBarTheme</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuTheme</item>
        <item name="alertDialogTheme">@style/DialogTheme</item>
        <item name="switchStyle">@style/SwitchTheme</item>
    </style>
    <style name="ScrollStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>
    <style name="SwitchTheme" parent="Widget.Material3.CompoundButton.Switch">
        <item name="track">@drawable/switch_track</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
    </style>
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorBackground</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>
    <style name="DialogTheme" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorDialogBackground</item>
    </style>
    <style name="ActionBarTheme" parent="Widget.Material3.ActionBar.Solid">
        <item name="background">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>
    <style name="ClickableBackground">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    <style name="ToolbarWithBackButtonStyle" parent="ActionBarTheme">
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
    </style>
    <style name="DefaultTextViewStyle">
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>
    <style name="SecondaryTextViewStyle">
        <item name="android:textSize">@dimen/default_text_size_very_small</item>
    </style>
    <style name="GroupTitleTextViewStyle">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/default_text_size_small2</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CreateBarcodeFragmentAlternativeTextViewStyle">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>
    <style name="DelimiterStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>
    <style name="BaseAppBarLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="liftOnScroll">false</item>
        <item name="liftOnScrollTargetViewId">@id/scroll_view</item>
    </style>
    <style name="AppBarLayoutStyle" parent="BaseAppBarLayoutStyle">
        <item name="liftOnScroll">false</item>
        <item name="liftOnScrollTargetViewId">@id/scroll_view</item>
    </style>
    <style name="OverflowMenuTheme" parent="@style/Widget.Material3.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/overflow_background</item>
    </style>
</resources>